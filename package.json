{
    "name": "regexp-tools",
    "displayName": "Regexp Tools",
    "description": "some useful tools about regexp",
    "version": "0.0.2",
    "publisher": "YuTengjing",
    "icon": "assets/logo.png",
    "engines": {
        "vscode": "^1.76.0"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/tjx666/vscode-regexp-tools"
    },
    "keywords": [
        "regexp",
        "reg",
        "regular",
        "regex101"
    ],
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:javascript",
        "onLanguage:javascriptreact",
        "onLanguage:typescript",
        "onLanguage:typescriptreact",
        "onLanguage:vue"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "title": "Generate Regexp from Selections and Copy",
                "command": "regexp-tools.generateRegexpFromSelections"
            }
        ]
    },
    "eslintConfig": {
        "extends": "@yutengjing/eslint-config-typescript"
    },
    "prettier": "@yutengjing/prettier-config",
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts",
        "package": "vsce package --no-dependencies",
        "release": "vsce publish --no-dependencies"
    },
    "devDependencies": {
        "@types/vscode": "^1.76.0",
        "@types/node": "^18.15.0",
        "@yutengjing/eslint-config-typescript": "^0.2.5",
        "@yutengjing/prettier-config": "^0.0.1",
        "@vscode/vsce": "^2.18.0",
        "eslint": "^8.36.0",
        "typescript": "5.0.1-rc"
    }
}
